extends ./components/layout.pug
block variables
    - var title = 'Контакты'

block content
    h1= title  
    .content__contacts
        form(action="POST")
            input.contacts__name(type="text", name="name" placeholder="Ваше имя")
            textarea.contacts__textarea(name="text", cols="30", rows="10" placeholder="Текст сообщения")
            input.contacts__send(type="submit", value="Отправить") 